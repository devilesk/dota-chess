<root>
    <styles>
        <include src="file://{resources}/styles/dotastyles.css" />
        <include src="file://{resources}/styles/custom_game/main.css" />
        <include src="file://{resources}/styles/custom_game/chess.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/main.js" />
    </scripts>
    <Panel class="container" hittest="false">
        <Panel class="controls-container" hittest="false">
            <Button id="DashboardButton" hittest="false">
            </Button>
        </Panel>
        <Panel class="inner-container" hittest="false">
            <Panel class="right-container" hittest="false">
                <Panel id="chat-container" hittest="false" />
            </Panel>
            <Panel class="center-container" hittest="false">
                <Panel class="board-container">
                    <Panel class="rank-board-container">
                        <Panel id="captured-top" class="captured-container">
                        </Panel>
                        <Panel id="rank-container" hittest="false" />
                        <Panel id="board" class="board" hittest="false" />
                        <Panel id="captured-bottom" class="captured-container">
                        </Panel>
                    </Panel>
                    <Panel id="file-container">
                    </Panel>
                </Panel>
            </Panel>
            <Panel class="left-container" hittest="false">
                <Button id="btn-flip" class="btn btn-action" onmouseover="DOTAShowTextTooltip('Flip board')" onmouseout="DOTAHideTextTooltip()" onactivate="OnFlipBoardPressed()">
                    <Image src="file://{images}/flip_board.png" />
                </Button>
                <!--<Button id="btn-toggle-player" class="btn" text="toggle player" onactivate="OnTogglePlayerPressed()">
                    <Label id="btn-toggle-player-label" text="Toggle Player" />
                </Button>-->
                <Panel class="info-container" hittest="false">
                    <Panel id="timer-top" class="timer top" hittest="false">
                        <DOTAAvatarImage id="player-top" class="avatar top" />
                        <Label id="timer-label-top" hittest="false" text="0:00" />
                    </Panel>
                    <Panel id="history" class="history" hittest="false" />
                    <Panel id="action-container" class="" hittest="false">
                        <Panel id="button-container">
                            <Panel id="action-button-container">
                                <Button id="btn-swap" class="btn btn-action" onmouseover="DOTAShowTextTooltip('Request side change')" onmouseout="DOTAHideTextTooltip()" onactivate="OnSwapPressed()">
                                    <Image src="file://{images}/swap.png" />
                                </Button>
                                <Button id="btn-undo" class="btn btn-action" onmouseover="DOTAShowTextTooltip('Propose a takeback')" onmouseout="DOTAHideTextTooltip()" onactivate="OnUndoPressed()">
                                    <Image src="file://{images}/undo5.png" />
                                </Button>
                                <Button id="btn-draw" class="btn btn-action" onmouseover="DOTAShowTextTooltip('Offer Draw')" onmouseout="DOTAHideTextTooltip()" onactivate="OnOfferDrawPressed()">
                                    <Image src="file://{images}/hand.png" />
                                </Button>
                                <Button id="btn-resign" class="btn btn-action" onmouseover="DOTAShowTextTooltip('Resign')" onmouseout="DOTAHideTextTooltip()" onactivate="OnResignPressed()">
                                    <Image src="file://{images}/white66.png" />
                                </Button>
                            </Panel>
                            <Panel id="confirm-button-container">
                                <Button id="btn-cancel" class="btn btn-action hidden" onmouseover="DOTAShowTextTooltip('Cancel')" onmouseout="DOTAHideTextTooltip()" onactivate="OnCancelActionPressed()">
                                    <Label id="btn-cancel-label" hittest="false" text="&#10006;" />
                                </Button>
                                <Button id="btn-confirm" class="btn btn-action hidden" onmouseover="DOTAShowTextTooltip('Confirm')" onmouseout="DOTAHideTextTooltip()" onactivate="OnConfirmActionPressed()">
                                    <Label id="btn-confirm-label" hittest="false" text="&#10004;" />
                                </Button>
                            </Panel>
                        </Panel>
                        <Panel id="swap-request-container" class="action-message-container hidden">
                            <Label class="action-message" hittest="false" html="true" text="Accept side change?" />
                            <Panel class="action-message-buttons">
                                <Button class="btn btn-accept" onactivate="OnAcceptSwapPressed()">
                                    <Label hittest="false" text="	&#10004;" />
                                </Button>
                                <Button class="btn btn-decline" onactivate="OnDeclineSwapPressed()">
                                    <Label hittest="false" text="&#10006;" />
                                </Button>
                            </Panel>
                        </Panel>
                        <Panel id="draw-request-container" class="action-message-container hidden">
                            <Label class="action-message" hittest="false" html="true" text="Accept draw?" />
                            <Panel class="action-message-buttons">
                                <Button class="btn btn-accept" onactivate="OnAcceptDrawPressed()">
                                    <Label hittest="false" text="	&#10004;" />
                                </Button>
                                <Button class="btn btn-decline" onactivate="OnDeclineDrawPressed()">
                                    <Label hittest="false" text="&#10006;" />
                                </Button>
                            </Panel>
                        </Panel>
                        <Panel id="undo-request-container" class="action-message-container hidden">
                            <Label class="action-message" hittest="false" html="true" text="Accept takeback?" />
                            <Panel class="action-message-buttons">
                                <Button class="btn btn-accept" onactivate="OnAcceptUndoPressed()">
                                    <Label hittest="false" text="	&#10004;" />
                                </Button>
                                <Button class="btn btn-decline" onactivate="OnDeclineUndoPressed()">
                                    <Label hittest="false" text="&#10006;" />
                                </Button>
                            </Panel>
                        </Panel>
                    </Panel>
                    <Panel id="timer-bottom" class="timer bottom" hittest="false">
                        <DOTAAvatarImage id="player-bottom" class="avatar bottom" />
                        <Label id="timer-label-bottom" hittest="false" text="0:00" />
                    </Panel>
                </Panel>
            </Panel>
        </Panel>
    </Panel>
</root>