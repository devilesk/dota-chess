<root>
    <styles>
        <include src="file://{resources}/styles/dotastyles.css" />
        <include src="file://{resources}/styles/custom_game/main.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/main.js" />
    </scripts>
    <Panel class="container" hittest="false">
        <Panel class="controls-container" hittest="false">
            <Button id="DashboardButton" hittest="false">
            </Button>
        </Panel>
        <Panel class="inner-container" hittest="false">
            <Panel class="right-container" hittest="false">
                <Panel id="chat-container" hittest="false" />
            </Panel>
            <Panel class="center-container" hittest="false">
                <Panel id="board" class="board" hittest="false" />
                <Panel class="info-container" hittest="false">
                    <Panel id="timer-black" class="timer black" hittest="false">
                        <DOTAAvatarImage id="player-black" class="avatar black" />
                        <Label id="timer-label-black" hittest="false" text="0:00" />
                    </Panel>
                    <Panel id="history" class="history" hittest="false" />
                    <Panel id="action-container" class="" hittest="false">
                        <Panel id="action-button-container">
                            <Button id="undo-btn" class="btn action-btn" onmouseover="DOTAShowTextTooltip('Propose a takeback')" onmouseout="DOTAHideTextTooltip()">
                                <Image src="file://{images}/undo5.png" />
                            </Button>
                            <Button id="draw-btn" class="btn action-btn" onmouseover="DOTAShowTextTooltip('Offer Draw')" onmouseout="DOTAHideTextTooltip()">
                                <Image src="file://{images}/hand.png" />
                            </Button>
                            <Button id="resign-btn" class="btn action-btn" onmouseover="DOTAShowTextTooltip('Resign')" onmouseout="DOTAHideTextTooltip()">
                                <Image src="file://{images}/white66.png" />
                            </Button>
                        </Panel>
                        <Panel id="action-message-container">
                            <Label id="action-message" hittest="false" html="true" text="Your opponent       proposes a takeback" />
                            <Panel id="action-message-buttons">
                                <Button id="accept-btn" class="btn">
                                    <Label id="accept-btn-label" hittest="false" text="	&#10004;" />
                                </Button>
                                <Button id="decline-btn" class="btn">
                                    <Label id="decline-btn-label" hittest="false" text="&#10006;" />
                                </Button>
                            </Panel>
                        </Panel>
                        <Button id="claim-draw-btn" class="btn">
                            <Label id="claim-draw-btn-label" hittest="false" text="Claim Draw" />
                        </Button>
                    </Panel>
                    <Panel id="timer-white" class="timer white" hittest="false">
                        <DOTAAvatarImage id="player-white" class="avatar white" />
                        <Label id="timer-label-white" hittest="false" text="0:00" />
                    </Panel>
                </Panel>
            </Panel>
            <Panel class="left-container" hittest="false">
                <TextEntry id="input-fen" maxchars="100" placeholder="Enter Fen..." oninputsubmit="OnFenSubmitted()" />
                <Button id="btn-toggle-player" class="btn" text="toggle player" onactivate="OnTogglePlayerPressed()">
                    <Label id="btn-toggle-player-label" text="Toggle Player" />
                </Button>
            </Panel>
        </Panel>
    </Panel>
</root>