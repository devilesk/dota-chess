<root>
    <styles>
        <include src="file://{resources}/styles/dotastyles.css" />
        <include src="file://{resources}/styles/custom_game/chat/chat.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/chat/chat.js" />
    </scripts>
    <Panel class="chat-container" hittest="false">
        <Panel id="chat-message-container" hittest="false" />
        <Panel id="chat-input-container" hittest="false">
            <TextEntry id="chat-input" placeholder="Enter message..." oninputsubmit="OnChatMessageEntered()" onblur="OnChatBlur()" />
            <Button id="chat-input-button" onactivate="OnChatMessageEntered()">
                <Label id="chat-input-button-label" text="Send" />
            </Button>
        </Panel>
    </Panel>
</root>